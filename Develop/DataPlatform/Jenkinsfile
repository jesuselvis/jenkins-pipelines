@Library('jenkins-library@main')_

pipeline {
    agent {
        label 'master'
    }

    environment {        
        GIT_AWS_SRC_DEPLOY  = "${GIT_AWS_IAC_DATAPLATFORM}"
        GIT_AWS_SRC_BRANCH 	= 'main'
        TF_BACKEND_BUCKET   = 'devops-iac-dev-jenkins-tfstates'
        TF_BACKEND_KEY      = 'dataplatform/terraform.tfstate'
        TF_BACKEND_ACCESS_ID= 'AWS_TFSTATES__BACKEND_ACCOUNT'
    }

    stages {
    	stage ('Prepare') {
            steps {
				script {                    
					gitHandlerLibrary.checkout(repository=GIT_AWS_SRC_DEPLOY, branch=GIT_AWS_SRC_BRANCH)                    
                    version = 'latest'
				}
            }
        }

        stage ('AWS Init') {
            steps {
				script{
                    terraformHandlerLibrary.createAwsBackend(_bucketName=TF_BACKEND_BUCKET, _bucketKey=TF_BACKEND_KEY, _credentials=TF_BACKEND_ACCESS_ID)
                    terraformHandlerLibrary.initialize()
                }	
            }
        }

        stage ('AWS Plan') {
            steps {
				sh 'echo "AWS Plan"'	
            }
        }

        stage ('AWS Checkov') {
            steps {
                sh 'echo "AWS Checkov"'	
            }
        }

        stage ('AWS Infra Cost') {
            steps {
                sh 'echo "AWS Infra Cost"'	
            }
        }

        stage ('AWS Apply') {
            steps {
                sh 'echo "AWS Apply"'
            }
        }
    }
	post {
	    always {
		    cleanWs()
	    }
    }
}
